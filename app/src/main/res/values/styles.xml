<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TimerNumber">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/timer_number_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TimerNumberSubtitle">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Title">
        <item name="android:textSize">18sp</item>
    </style>
    
    <style name="Text.Caption">
        <item name="android:textColor">@color/grey_text</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>